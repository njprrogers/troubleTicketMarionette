{{!empty TicketviewTmpl template}}


<div class="container dark-container">
    <div class="row">
        <div class="col-md-6">
            <div class="col-sm-12">
                IMSI :
            </div>
            <div class="col-sm-12">
                {{imsi}}
            </div>
            <div class="col-sm-12">
                UPDATED :
            </div>
            <div class="col-sm-12">
                {{updated}}
            </div>
        </div>
        <div class="col-md-6">
            <p>MSISDN : {{msisdn}}</p>
            <p>CREATED : {{created}}</p>
        </div>
    </div>

    <hr />
    <div class="row">
        <div class="span12">
            <p>ISSUE TIME PERIOD : FROM {{startTime}} TO {{endTime}}</p>
            <p>ISSUE TITLE : {{title}}</p>
            <p>ISSUE LOCATION : {{location}}</p>
            <p>STATUS : {{status}}</p>
            <p>DESCRIPTION : {{description}}</p>
            <p>ATTACHMENTS : </p>
            {{#each attachments}}
                <p> {{filename}}</p>
            {{/each}}
        </div>
    </div>

    <a href="#ticket/list?sourceApplication=cqm">Go to Search</a>
    <a href="#ticket/edit/{{id}}?sourceApplication=cqm">Edit this ticket</a>
</div>

<div class="container">

</div>