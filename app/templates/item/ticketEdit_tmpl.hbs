{{!empty TicketeditTmpl template}}
<div class="container view-container">
    <div class="row">
        <div class="col-md-2">
            IMSI :
        </div>
        <div class="col-md-4">
            {{imsi}}&nbsp;
        </div>

        <div class="col-md-2">
            UPDATED :
        </div>
        <div class="col-md-4">
            {{updated}}&nbsp;
        </div>
        <div class="col-md-2">
            MSISDN :
        </div>
        <div class="col-md-4">
            {{msisdn}}&nbsp;
        </div>
        <div class="col-md-2">
            CREATED :
        </div>
        <div class="col-md-4">
            {{created}}&nbsp;
        </div>
    </div>

    <hr/>

    <form id="ticketEdit">
        <div class="row">


            <div class="col-md-2">ISSUE TIME PERIOD :</div>
            <div class="col-md-10">FROM {{startTime}} TO {{endTime}}</div>


            <div class="col-md-2">ISSUE TITLE :</div>
            <div class="col-md-10"><input class="width-100-percent" id="title" value="{{title}}" name="title"/></div>

            <div class="col-md-2">LOCATION :</div>
            <div class="col-md-10"><input class="width-100-percent" id="location" value="{{location}}" name="location"/>
            </div>

            <div class="col-md-2">STATUS :</div>
            <div class="col-md-10">
                <select id="status" class="width-100-percent">
                    <option value="open">Open</option>
                    <option value="pending">Pending</option>
                    <option value="solved">Solved</option>
                </select>
            </div>

            <div class="col-md-2">DESCRIPTION :</div>
            <div class="col-md-10"><textarea class="width-100-percent" id="description" value="{{description}}"
                                             name="description"/></div>
        </div>
        <hr/>

        <div class="row button-row">
            <div class="col-md-9"></div>

            <div class="col-md-3">
                <a class="secondary-btn" href="#ticket/view/{{id}}?sourceApplication=cqm">Cancel</a>
                <input type="submit" id="submit-edit" class="primary-btn" value="Done"/>
            </div>
        </div>


    </form>
</div>
